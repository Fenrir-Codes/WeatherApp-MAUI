<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WeatherPage"
             Title="WeatherPage">

    <ScrollView>
        <Grid RowSpacing="20"
              Padding="10"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto">

            <!-- LOCATION BAR -->
            <StackLayout Grid.Row="0"
                         Margin="10,20,10,0"
                         Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand">

                <Frame Padding="10"
                       CornerRadius="35"
                       HasShadow="True"
                       BorderColor="LightGray"
                       HorizontalOptions="StartAndExpand">

                    <Label Text="Your Location"
                           FontSize="Medium"
                           VerticalOptions="Center"
                           SemanticProperties.HeadingLevel="Level1"/>

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer x:Name="TapLocation" Tapped="TapLocation_Tapped" />
                    </Frame.GestureRecognizers>
                </Frame>

                <ImageButton Source="searchicon.png"
                             HeightRequest="30"
                             WidthRequest="30"
                             Margin="5,0,0,0"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Clicked="ImageButton_Clicked"/>
            </StackLayout>

            <!-- CITY AND DESCRIPTION -->
            <StackLayout Grid.Row="1"
                         Orientation="Vertical"
                         Margin="10,0">

                <Label x:Name="lblCity"
                       FontSize="30"
                       HorizontalOptions="Center"
                       TextColor="Gray" 
                       FontAttributes="Bold"/>

                <Label x:Name="lblWeatherDescription"
                       FontSize="Medium"
                       HorizontalOptions="Center"
                       TextColor="SlateGray"/>
            </StackLayout>

            <!-- WEATHER ICON -->
            <Image Grid.Row="2"
                   x:Name="ImgWeatherIcon"
                   VerticalOptions="Start"
                   HeightRequest="200"
                   WidthRequest="200"
                   HorizontalOptions="Center"
                   />

            <!-- TEMPERATURE AND DETAILS -->
            <Grid Grid.Row="3"
                  Margin="10"
                  RowDefinitions="Auto,Auto"
                  ColumnDefinitions="*,*,*">

                <Image Grid.Row="0" Grid.Column="0"
                       HorizontalOptions="Center"
                       HeightRequest="25"
                       Source="humidity.png"/>

                <Label x:Name="lblHunidity"
                       Grid.Row="1"
                       Grid.Column="0"
                       HorizontalOptions="Center"/>

                <Label x:Name="lblTemperature"
                       Grid.Row="0"
                       Grid.Column="1"
                       Grid.RowSpan="2"
                       HorizontalOptions="Center"
                       FontSize="36"
                       FontAttributes="Bold"/>

                <Image Grid.Row="0" Grid.Column="2"
                       HorizontalOptions="Center"
                       HeightRequest="25"
                       Source="wind.png"/>

                <Label x:Name="lblWind"
                       Grid.Row="1"
                       Grid.Column="2"
                       HorizontalOptions="Center"/>
            </Grid>

            <!-- HOURLY FORECAST LIST -->
            <CollectionView Grid.Row="4"
                            x:Name="WeatherCollection"
                            HeightRequest="120"
                            Margin="10,0">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"
                                       ItemSpacing="20"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              Padding="5">
                            <Image Grid.Row="0"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Start"
                                   HeightRequest="50"
                                   WidthRequest="50"
                                   Source="{Binding weather[0].customIcon}"/>
                            <Label Grid.Row="1"
                                   FontSize="Medium"
                                   HorizontalOptions="Center"
                                   Text="{Binding main.temperature}"/>
                            <Label Grid.Row="2"
                                   FontSize="Small"
                                   HorizontalOptions="Center"
                                   Text="{Binding dateTime}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ScrollView>
</ContentPage>
